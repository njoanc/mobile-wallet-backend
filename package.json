  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "ts-node ./node_modules/typeorm/cli.js",
    "makemigrations": "npm run typeorm -- migration:generate ./src/migrations/migration -d src/data-source.ts",
    "migrate": "npm run typeorm migration:run -d src/data-source.ts",
    "migration:empty": "npm run typeorm migration:create -- -n dataMigration",
    "migration:revert": "npm run typeorm migration:revert",
    "migrations:squash": "cross-env NODE_ENV=development ts-node src/scripts/squashMigrations.ts"
  },
